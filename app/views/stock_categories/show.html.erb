<p>
  <b>Name:</b>
  <%= @stock_category.name %>
</p>


<%= link_to 'Edit', edit_stock_category_path(@stock_category) %> |
<%= link_to 'Back', stock_categories_path %>

<hr/>

<h1>Listing stocks</h1>
<%= "stocks number= #{@stocks.size}" %>
<table>
  <tr>
    <th>Market</th>
    <th>Code</th>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @stocks.each do |stock| %>
      <tr>
        <% if params[:is_index] %>
            <td><%= stock.market %></td>
        <% else %>
            <td><%= stock.market %></td>
        <% end %>
        <td><%= stock.code %></td>
        <td><%= stock.name %></td>
        <td><%= link_to 'Show', stock %></td>
        <td><%= link_to 'Edit', edit_stock_path(stock) %></td>
        <td><%= link_to 'Destroy', stock, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
  <% end %>
</table>

<br/>

